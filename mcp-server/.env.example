# Server Configuration
DEBUG=false
HOST=0.0.0.0
PORT=8000

# Database Configuration (PostgreSQL)
# NOTE: Using port 5433 to avoid conflict with local PostgreSQL on 5432
DATABASE_URL=postgresql+asyncpg://workflow_user:workflow_password@localhost:5433/workflow_orchestrator
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here
SMTP_FROM_EMAIL=your-email@gmail.com
SMTP_USE_TLS=true

# Redis Configuration
# NOTE: Using port 6380 to avoid conflict with local Redis on 6379
REDIS_URL=redis://localhost:6380
REDIS_DB=0
SESSION_TTL=86400
CACHE_TTL=3600

# OAuth Configuration
OAUTH_CLIENT_ID=your-client-id-here
OAUTH_CLIENT_SECRET=your-client-secret-here
JWT_SECRET=your-secret-key-here-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
ALLOWED_ORIGINS=https://chat.openai.com,https://chatgpt.com

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20

# Export Configuration
MAX_EXPORT_SIZE_MB=10
EXPORT_TEMP_DIR=/tmp/smart-info-navigator

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=text
LOG_OUTPUT=stdout
LOG_FILE_PATH=/var/log/workflow-orchestrator/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5
